            "$ref" : "#/components/schemas/Sign"
          },
          "actor" : {
            "$ref" : "#/components/schemas/Actor"
          }
        }
      },
      "Sign" : {
        "type" : "object",
        "properties" : {
          "serialNumber" : {
            "type" : "integer"
          },
          "issuer" : {
            "type" : "string"
          },
          "subject" : {
            "type" : "string"
          },
          "id" : {
            "type" : "integer",
            "format" : "int64"
          }
        }
      },
      "SigningRequest" : {
        "type" : "object",
        "properties" : {
          "title" : {
            "type" : "string"
          },
          "state" : {
            "type" : "integer",
            "format" : "int32"
          },
          "rejectionReason" : {
            "type" : "string"
          },
          "additionalInformation" : {
