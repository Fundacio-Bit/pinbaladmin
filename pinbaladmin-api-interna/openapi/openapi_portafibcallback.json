          "name" : {
            "type" : "string"
          },
          "administrationID" : {
            "type" : "string"
          },
          "id" : {
            "type" : "string"
          }
        }
      },
      "PortaFIBEvent" : {
        "type" : "object",
        "properties" : {
          "eventTypeID" : {
            "type" : "integer",
            "format" : "int32"
          },
          "version" : {
            "type" : "integer",
            "format" : "int32"
          },
          "eventDate" : {
            "type" : "string",
            "format" : "date-time"
          },
          "applicationID" : {
            "type" : "string"
          },
          "entityID" : {
            "type" : "string"
          },
          "signingRequest" : {
            "$ref" : "#/components/schemas/SigningRequest"
          },
